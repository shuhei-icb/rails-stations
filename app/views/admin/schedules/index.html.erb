<h1>上映一覧</h1>
<table>
  <tr>
    <th>ID</th>
    <th>映画名</th>
    <th>開始時間</th>
    <th>終了時間</th>
    <th>登録日時</th>
    <th>更新日時</th>
  </tr>
  <% @schedules.each do |schedule| %>
  <tr>
   <td>
      <%= link_to admin_schedule_path(schedule.id) do %>
      <%= schedule.id %>
      <% end %>
   </td>
   <td><%= schedule.movie.name %></td>
   <td><%= schedule.start_time %></td>
   <td><%= schedule.end_time %></td>
   <td><%= schedule.movie.created_at %></td>
   <td><%= schedule.movie.updated_at %></td>
  </tr>
  <% end %>
</table>

