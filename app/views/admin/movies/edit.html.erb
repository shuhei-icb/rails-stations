<%= form_with model: @movie, url: admin_movie_path, local: true do |form| %>
  <%= form.label :name, "映画タイトル" %>
  <%= form.text_field :name %>

  <%= form.label :year, "公開年" %>
  <%= form.text_field :year %>

  <%= form.label :is_showing, "上映中か" %>
  <%= form.check_box :is_showing ,{checked: true}, "true", "false" %>

  <%= form.label :description, "概要" %>
  <%= form.text_area :description %>

  <%= form.label :image_url, "画像URL" %>
  <%= form.text_field :image_url %>

  <%= form.submit "変更する" %>

  <%= link_to admin_movie_path(@movie.id), method: :delete, data: {confirm: "削除しますか？"} %>
<% end %>