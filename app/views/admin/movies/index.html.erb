<h1>Movies</h1>
<table>
  <tr>
    <th>ID</th>
    <th>タイトル</th>
    <th>公開年</th>
    <th>概要</th>
    <th>画像URL</th>
    <th>上映中</th>
    <th>登録日時</th>
    <th>更新日時</th>
  </tr>
  <% @all_movies.each do |movie| %>
  <tr>
   <td><%= movie.id %></td>
   <td><%= movie.name %></td>
   <td><%= movie.year %></td>
   <td><%= movie.description %></td>
   <td><%= image_tag "#{movie.image_url}" %></td>
   <% if movie.is_showing %>
    <td>上映中</td>
   <% else %>
    <td>上映予定</td>
   <% end %>
   <td><%= movie.created_at %></td>
   <td><%= movie.updated_at %></td>
  </tr>
  <% end %>
</table>